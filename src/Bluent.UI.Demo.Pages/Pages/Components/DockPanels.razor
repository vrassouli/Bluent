@page "/components/dock-panels"

@code {
    private bool _toggled = true;
    private DockPanel? _panel;

    private void ToggleButton()
    {
        _toggled = !_toggled;
        
        _panel?.SetStateHasChanged();
    }
}
@namespace Bluent.UI.Demo.Pages.Components
<PageTitle>Dock Panels</PageTitle>

<div class="p-5 py-md-10 px-md-12">
    <div class="w-100 w-md-50 m-auto">
        <h1>Dock Panels</h1>

        <h3>Default</h3>
        <section class="p-7 rounded-5 shadow-3">
            <DockBar DockName="Top" DisplayTitle Class="mb-3" />
            <div class="d-flex flex-fill" style="height: 300px">
                <div>
                    <DockBar DockName="Left" 
                             Orientation="Orientation.Vertical"
                             DisplayTitle 
                             Class="mb-3" />
                </div>
                <SplitPanelContainer Class="bui-split-panel flex-fill overflow-hidden rounded-5"
                                     EndSideResizeMode="ResizeMode.Fixed">
                    <Top>
                        <DockContainer DockName="Top" Class="bg-3 h-100" />
                    </Top>
                    <Start>
                        <DockContainer DockName="Left" Class="bg-3 h-100 " />
                    </Start>
                    <Center>
                        <div class="h-100">
                            <div class="bg-1 p-5 rounded-5 border h-100">
                            
                            </div>                  
                        </div>
                    </Center>
                    <End>
                        <DockContainer DockName="Right" DockMode="DockMode.Floating" Class="bg-3 h-100"/>
                    </End>
                    <EndSide>
                        End Side!
                    </EndSide>
                </SplitPanelContainer>
                
            </div>
            <DockBar DockName="Right" Class="mt-3" />
        </section>
    </div>
</div>

<DockPanel @ref="_panel" DockName="Left" Icon="icon-ic_fluent_tree_deciduous_20_regular" Title="Panel 1">
    <MoreActionsContent>
        <Button Text="Click" Size="ButtonSize.Small" Appearance="ButtonAppearance.Subtle"
                disabled="@(!_toggled)"></Button>
    </MoreActionsContent>
    <ChildContent>
        <div>Panel 1</div>
        <div>
            <Button Text="Toggle Toolbar Button" OnClick="ToggleButton"/>
        </div>
    </ChildContent>
</DockPanel>
<DockPanel DockName="Left" Icon="icon-ic_fluent_food_carrot_20_regular" Title="Panel 2">
    <div>Panel 2</div>
</DockPanel>

<DockPanel DockName="Right" Icon="icon-ic_fluent_vehicle_car_profile_ltr_20_regular" Title="Panel 3">
    <div>Panel 3</div>
</DockPanel>
<DockPanel DockName="Right" Icon="icon-ic_fluent_food_apple_20_regular" Title="Panel 4">
    <div>Panel 4</div>
</DockPanel>
<DockPanel DockName="Right" Icon="icon-ic_fluent_food_fish_20_regular" Title="Panel 5">
    <div>Panel 5</div>
</DockPanel>