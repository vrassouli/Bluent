@page "/components/file-selects"
@using Bluent.UI.Interops.Abstractions

<div class="p-5 py-md-10 px-md-12">
    <div class="w-100 w-md-50 m-auto">
        <h1>File Select</h1>

        <h3>Default</h3>
        <section class="p-7 rounded-5 shadow-3">
            <FileSelect Text="Choose a file" Icon="icon-ic_fluent_attach_20_regular" ActiveIcon="icon-ic_fluent_attach_20_filled" />
        </section>

        <h3>Multiple</h3>
        <section class="p-7 rounded-5 shadow-3">
            <FileSelect Text="Choose a file" Icon="icon-ic_fluent_attach_20_regular" ActiveIcon="icon-ic_fluent_attach_20_filled" Multiple />
        </section>

    </div>
</div>

