@using Bluent.UI.Components
@implements Bluent.UI.Utilities.Abstractions.IMdiTab
@namespace Bluent.UI.Utilities

<Tab Text="@Title"
     Icon="@Icon"
     Class="@Class">
    <Actions>
        <Button Icon="icon-ic_fluent_dismiss_20_regular"
                ActiveIcon="icon-ic_fluent_dismiss_20_filled"
                Size="ButtonSize.Small"
                Appearance="ButtonAppearance.Subtle"
                OnClick="CloseTab"/>
    </Actions>
    <ChildContent>
        <BluentDynamicComponent Type="ComponentType"
                                Parameters="GetParameters()"
                                OnComponentCaptured="OnComponentCaptured"/>
    </ChildContent>
</Tab>