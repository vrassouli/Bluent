@using Bluent.UI.Components
@namespace Bluent.UI.Utilities
<TabList SelectedIndex="_selectedIndex"
         SelectedIndexChanged="OnSelectedIndexChanged"
         OnTabAdded="OnTabAdded"
         Class="@Class">
    <CascadingValue Value="this">
        @foreach (var item in _openDocuments)
        {
            <MdiTab ComponentType="item.ComponentType"
                    TabId="@item.Id"
                    CommandManager="item.CommandManager"
                    Parameters="item.Parameters"
                    @key="item"/>
        }
    </CascadingValue>
</TabList>