                {
                    <PanelResizer SplitArea="SplitArea.EndSide"
                                  Floating="GetFloating(SplitArea.EndSide)"
                                  Size="GetSize(SplitArea.EndSide)"/>
                }
            </SplitPanel>
        }

        @if (Bottom is not null)
        {
            <SplitPanel SplitArea="SplitArea.Bottom"
                        Floating="GetFloating(SplitArea.Bottom)"
                        Size="GetSize(SplitArea.Bottom)">
                @Bottom
                @if (CanResizeBottom)
                {
                    <PanelResizer SplitArea="SplitArea.Bottom" 
                                  Floating="GetFloating(SplitArea.Bottom)"
                                  Size="GetSize(SplitArea.Bottom)"/>
                }
            </SplitPanel>
        }

        @if (Footer is not null)
        {
            <SplitPanel SplitArea="SplitArea.Footer"
                        Floating="GetFloating(SplitArea.Footer)"
