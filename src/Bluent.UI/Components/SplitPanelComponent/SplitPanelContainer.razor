@using Bluent.UI.Components.SplitPanelComponent.Internal
@inherits BluentUiComponentBase
@namespace Bluent.UI.Components
<CascadingValue Value="this" IsFixed>
    <div @attributes=AdditionalAttributes id="@Id" class="@GetComponentClass()" style="@GetComponentStyle()">
        @if (Header is not null)
        {
            <SplitPanel SplitArea="SplitArea.Header"
                        Floating="GetFloating(SplitArea.Header)"
                        Size="GetSize(SplitArea.Header)">
                @Header
                @if (CanResizeHeader)
                {
                    <PanelResizer SplitArea="SplitArea.Header" 
                                  Floating="GetFloating(SplitArea.Header)"
                                  Size="GetSize(SplitArea.Header)"/>
                }
            </SplitPanel>
        }

        @if (Top is not null)
        {
            <SplitPanel SplitArea="SplitArea.Top"
                        Floating="GetFloating(SplitArea.Top)"
                        Size="GetSize(SplitArea.Top)">
                @Top
                @if (CanResizeTop)
                {
                    <PanelResizer SplitArea="SplitArea.Top"
                                  Floating="GetFloating(SplitArea.Top)"
                                  Size="GetSize(SplitArea.Top)"/>
                }
            </SplitPanel>
        }

        @if (Start is not null)
        {
            <SplitPanel SplitArea="SplitArea.Start"
                        Floating="GetFloating(SplitArea.Start)"
                        Size="GetSize(SplitArea.Start)">
                @Start
                @if (CanResizeStart)
                {
                    <PanelResizer SplitArea="SplitArea.Start" 
                                  Floating="GetFloating(SplitArea.Start)"
                                  Size="GetSize(SplitArea.Start)"/>
                }
            </SplitPanel>
        }

        @if (StartSide is not null)
        {
            <SplitPanel SplitArea="SplitArea.StartSide"
                        Floating="GetFloating(SplitArea.StartSide)"
                        Size="GetSize(SplitArea.StartSide)">
                @StartSide
                @if (CanResizeStartSide)
                {
                    <PanelResizer SplitArea="SplitArea.StartSide" 
                                  Floating="GetFloating(SplitArea.StartSide)"
                                  Size="GetSize(SplitArea.StartSide)"/>
                }
            </SplitPanel>
        }

        @if (Center is not null)
        {
            <SplitPanel SplitArea="SplitArea.Center">@Center</SplitPanel>
        }

        @if (End is not null)
        {
            <SplitPanel SplitArea="SplitArea.End"
                        Floating="GetFloating(SplitArea.End)"
