@namespace Bluent.UI.Components
@inherits BluentComponentBase
@typeparam TValue

<div class="@GetComponentClass()" style="@Style">
    <input @attributes=GetInputAdditionalAttributes() type="radio" checked="@IsChecked" id="@Id" @onchange="HandleOnChange" />
    <label for="@Id" class="indicator"></label>
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id">@Label</label>
    }
</div>
