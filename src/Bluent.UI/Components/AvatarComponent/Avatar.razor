@inherits BluentComponentBase
@namespace Bluent.UI.Components

<div @attributes=AdditionalAttributes id="@Id" class="@GetComponentClass()" style="@Style" @onclick="OnClick">
    @if (!string.IsNullOrEmpty(DisplayInitial))
    {
        <span class="initials">@DisplayInitial</span>
    }
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="icon @Icon"></i>
    }
    @if (!string.IsNullOrEmpty(ImageSource))
    {
        <img class="image" src="@ImageSource" onerror='this.style.display = "none"' />
    }
</div>