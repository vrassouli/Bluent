@namespace Bluent.UI.Components
@inherits BluentFieldComponentBase<TValue>
@typeparam TValue

<div class="@GetComponentClass()" style="@Style">
    @if (StartAddon != null)
    {
        <div class="start-addon">
            @StartAddon
        </div>
    }

    <select @attributes=GetInputAdditionalAttributes()
            @ref=Element
            id="@GetInputId()"
            name="@NameAttributeValue"
            multiple="@_isMultipleSelect"
            value="@GetValue()"
            @onchange="OnValueChanged">
        @ChildContent
    </select>

    @if (EndAddon != null)
    {
        <div class="end-addon">
            @EndAddon
        </div>
    }
</div>
