@using Bluent.UI.Diagrams.Tools
@inherits BluentComponentBase

<DrawingCanvas @attributes=AdditionalAttributes
               id="@Id"
               class="@GetComponentClass()"
               style="@Style"
               SnapSize="@(SnapToGrid ? GridSize : 0)"
               Tool="new DrawRectTool()">

    <defs>
        <pattern id="grid-pattern" patternUnits="userSpaceOnUse" width="@GridSize" height="@GridSize">
            @if (GridPattern is null)
            {
                <path fill="none" stroke="#aaa" stroke-width="0.5" d="M 0 0 h @GridSize M 0 0 h 0 M 0 0 v @GridSize M 0 0 v 0"></path>
            }
            else
            {
                @GridPattern
            }
        </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid-pattern)"></rect>


</DrawingCanvas>
