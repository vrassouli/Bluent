@using Bluent.UI.Diagrams.Elements
@using Bluent.UI.Diagrams.Elements.Abstractions
<g>
    <rect x="@Boundary.X"
          y="@Boundary.Y"
          width="@Boundary.Width"
          height="@Boundary.Height"
          stroke-width="@StrokeWidth"
          stroke-dasharray="@StrokeDashArray"
          stroke="@Stroke"
          fill="none" />
    @if (Canvas.SelectedElements.Count() == 1 && Element is IHasUpdatablePoints hasUpdatablePoints)
    {
        foreach (var updatablePoint in hasUpdatablePoints.UpdatablePoints)
        {
            <PointUpdater UpdatablePoint="@updatablePoint" PointerDown="e => HandlePointUpdaterSelect(e, updatablePoint)" />
        }
        
        @*
        foreach (var anchor in element.ResizeAnchors)
        {
            <ResizeHandle Boundary="@Boundary" Anchor="anchor" PointerDown="e => HandleResizeHandlePointerDown(e, anchor)" />
        }
 *@    
    }
</g>