<g @onpointerdown="HandlePointerDown"
   @onpointerdown:stopPropagation="true">
    <rect x="@Boundary.X"
          y="@Boundary.Y"
          width="@Boundary.Width"
          height="@Boundary.Height"
          stroke-width="@StrokeWidth"
          stroke-dasharray="@StrokeDashArray"
          stroke="@Stroke"
          fill="transparent"
          cursor="@GetCursor()"/>
</g>